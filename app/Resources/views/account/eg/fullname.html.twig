{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div>
                        {{ 'Update Your Name'|trans}}
                    </div>
                    <div>

                    </div>
                    <div>
                    </div>
                    <!--<a href="{{ url('account_logout', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}">Logout</a>-->
                    <form id="fullname-form" name="fullname-form" action="fullname" method="post" >
                        <div class="error">
                            {{ message }}
                        </div>
                        <div class="form-group">
                            <label >{{ 'Registered Iqama ID/SSN'|trans }}<span class="mandatory">*</span></label>
                            <input class="form-control"   value="{{ iktData.ID_no }}" name="fullname_registered_iqamaid" readonly="readonly"  autocomplete="off"  id="fullname_registered_iqamaid" placeholder="{{ 'Registered SSN/Iqama'|trans }}" type="text">
                        </div>

                        <div class="form-group">
                            <label >{{ 'Full Name'|trans }}<span class="mandatory">*</span></label>
                            <input class="form-control"   value="{% if posted %}{{ posted.full_name }}{% endif %}" autocomplete="off"  name="full_name"  id="full_name" placeholder="{{ 'Full Name'|trans }}" type="text">
                        </div>
                        <div class="form-group">
                            <label >{{ 'Comments'|trans }}<span class="mandatory">*</span></label>
                            <textarea class="form-control"   name="comment_fullname" autocomplete="off" id="comment_fullname">{% if posted %}{{ posted.comment_fullname }}{% endif %}</textarea>
                        </div>
                        <input type="submit" id="fullname-submit" name="fullname-submit" class="btn btn-primary" />
                    </form>
                </div>
            </div>
    </div>




{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
    <script src="{{ asset('js/lib/eg/formvalidation_fullname_'~ app.request.getLocale() ~'.js' )}}"></script>

{% endblock %}

