{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div>
                    {{ 'Update Missing Card'|trans}}
                </div>
                <div>
                    {{ 'Dear customer'|trans}}
                </div>
                <div>
                    {{ 'You can change your IKTISSAB Card with the new one through the following form'|trans }}
                </div>
                <!--<a href="{{ url('account_logout', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}">Logout</a>-->
                <form id="missingcard-form" name="missingcard-form" action="missingcard" method="post" >
                    <div class="error">
                        {{ message }}
                    </div>
                    <div class="form-group">
                        <label >{{ 'Registered Iqama ID/SSN'|trans }}<span class="mandatory">*</span></label>
                        <input class="form-control"   value="{{ iktData.ID_no }}" name="missingcard_registered_iqamaid" readonly="readonly"  autocomplete="off"  id="missingcard_registered_iqamaid" placeholder="{{ 'Registered SSN/Iqama'|trans }}" type="text">
                    </div>
                    <div class="form-group">
                        <label >{{ 'New Iktissab Number'|trans }}<span class="mandatory">*</span></label>
                        <input class="form-control" maxlength="8"   value="{% if posted %}{{ posted.new_iktissab_id }}{% endif %}" autocomplete="off"  name="new_iktissab_id"  id="new_iktissab_id" placeholder="{{ 'New Iktissab No'|trans }}" type="text">
                    </div>
                    <div class="form-group">
                        <label >{{ 'Confirm Iktissab Number'|trans }}<span class="mandatory">*</span></label>
                        <input class="form-control" maxlength="8"   value="{% if posted %}{{ posted.confirm_iktissab_id }}{% endif %}" autocomplete="off"  name="confirm_iktissab_id"  id="confirm_iktissab_id" placeholder="{{ 'Confirm Iktissab No'|trans }}" type="text">
                    </div>
                    <div class="form-group">
                        <label >{{ 'Comments'|trans }}<span class="mandatory">*</span></label>
                        <textarea class="form-control"   name="comment_missingcard" autocomplete="off" id="comment_missingcard">{% if posted %}{{ posted.comment_missingcard }}{% endif %}</textarea>
                    </div>
                    <input type="text" name="_csrf_token" value="{{ csrf_token('auth_missigcard') }}">
                    <input value="{{ 'Update'|trans }}" type="submit" id="missingcard-submit" name="missingcard-submit" class="btn btn-primary" />
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
    <script src="{{ asset('js/lib/eg/formvalidation_missingcard_'~app.request.getLocale()~'.js' )}}"></script>
{% endblock %}

