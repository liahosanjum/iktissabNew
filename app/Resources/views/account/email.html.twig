{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div>
                        {{ 'Update your email'|trans}}
                    </div>
                    <div>
                        {{ 'Dear Customer'|trans}}
                    </div>
                    <div>
                        {{ 'You can update your email through the following form'|trans}}
                    </div>
                    <!--<a href="{{ url('account_logout', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}">Logout</a>-->
                    <form id="email-form" name="email-form" action="email" method="post" >
                        <div class="error">
                            {{ message }}
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">{{ 'Current Email'|trans }}</label>
                            <input class="form-control" name="currentemail" id="currentemail" value="{{ iktData.email }}"  readonly="readonly"    type="email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">{{ 'New Email'|trans }}</label>
                            <input class="form-control" id="newemail"  name="newemail" value="{% if posted %} {{ posted.newemail }} {% endif %}"  placeholder="{{ 'New Email'|trans }}" type="email">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">{{ 'Confirm New Email'|trans }}</label>
                            <input class="form-control" value="{% if posted %} {{ posted.confirmemail }} {% endif %}" name="confirmnewemail"  id="confirmnewemail" placeholder="{{ 'Confirm New Email'|trans }}" type="email">
                        </div>

                        <input type="submit" value="{{ 'Update'|trans }}" id="email-submit" name="email-submit" class="btn btn-primary" name="submit" id="submit">
                    </form>

                </div>
            </div>
    </div>




{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
    <script src="{{ asset('js/lib/formvalidation_'~ app.request.getLocale() ~'.js' )}}"></script>

{% endblock %}

