{% extends 'base.html.twig' %}

{% block body %}
    {% if app.request.cookies.get('c_locale') == "en" %}
        {%  set side = 'right'  %}
    {% elseif app.request.cookies.get('c_locale') == "ar"  %}
        {%  set side = 'left'  %}
    {% else %}
        {%  set side = 'left'  %}
    {% endif %}
    <div class="container breadcrum-wrapper">
        <div class="row">
            <div class="breadcrumb">
                <a title="Home" class="in-active-link" href="#">{{ 'Home'|trans }}</a>
                <span class="breadcrumb-separator"><i class="fa fa-angle-{{ side }}" aria-hidden="true"></i></span>
                <a href="#" class="last-breadcrumb">{{ 'Retrieve account email'|trans}}</a>
            </div>
        </div>
    </div>
    <section class="container memeberemailwrapper">
            <div class="row">
                <div class="login-list-title-wrapper col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                    <div><h1> {{ 'Retrieve account email'|trans}}</h1></div>
                </div>
            </div>





        <div class="row message-forgot-email">

            {% if(error.success == false) %}
                <div class="col-lg-8 col-md-8 col-sm-11 col-xs-11  alert alert-danger mobile-form-mags">
                    {{ error.message }}
                </div>
            {% endif %}
            {% if(error.success == true and error.message != '') %}
                <div class="col-lg-8 col-md-8 col-sm-11 col-xs-11  alert alert-success mobile-form-mags">
                    {{ error.message }}
                </div>
            {% endif %}
        </div>
        {{ form_start(form) }}
        <div class="row forgot-email-account">
            <div class="col-lg-12 col-md-12 col-sm-12  col-xs-12  mobile-form-mags">

                <div class="row">
                    {{ form_row(form.iktCardNo) }}
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12  col-xs-12   mobile-form-mags" >
                <div class="row">
                    {{ form_row(form.iqama) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="claerfix"></div>
    </section>
{% endblock %}






    {% block javascripts %}



    <script type="text/javascript" src="{{ asset('default/jquery-validation-1.15.0/dist/jquery.validate.js') }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/boekkooijqueryvalidation/additional-methods.js") }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            {{ form_jquery_validation(form) }}
        });
    </script>

{% endblock %}












