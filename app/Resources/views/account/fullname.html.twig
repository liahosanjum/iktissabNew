{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            {{ form_jquery_validation(form) }}


                    $('form[name="update_fullname"]').on('submit', function (event) {

                        if($( "#update_fullname_fullname" ).hasClass( "valid" )) {
                            if($( "#update_fullname_comment_fullname" ).hasClass( "valid" )) {

                                event.preventDefault();
                                $.ajax({
                                    type: $(this).attr('method'),
                                    url: "{{ path('front_account_fullname', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}",
                                    data: new FormData(this),
                                    processData: false,
                                    contentType: false,
                                    beforeSend: function () {
                                        $('#preLoadersFull').html('<div id="loader"></div>');
                                    },
                                    complete: function () {

                                    },
                                    success: function (response) {
                                        $('#contents-8').html(response);
                                    }
                                })
                            }
                            else{
                                return false;
                            }
                        }
                        else{
                            return false;
                        }
                    });

        });

    </script>
