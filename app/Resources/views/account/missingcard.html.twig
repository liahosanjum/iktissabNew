{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            {{ form_jquery_validation(form) }}



            $('form[name="missing_card"]').on('submit', function (event) {
                if($( "#missing_card_new_iktissab_id_first" ).hasClass( "valid" ))
                {
                    if($( "#missing_card_new_iktissab_id_second" ).hasClass( "valid" ))
                    {
                        if($( "#missing_card_comment_missingcard" ).hasClass( "valid" )) {
