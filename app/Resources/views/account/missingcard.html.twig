                                processData: false,
                                contentType: false,
                                beforeSend: function () {
                                    $('#preLoadersCARD').html('<div id="loader"></div>');
                                },
                                complete: function () {

                                },
                                success: function (response) {
                                    //$('#preLoadersCARD').html('');
                                    $('#contents-5').html(response);
                                }
                            })
                        }else
                        {
                             return false;
                        }
                    }else
                    {
                         return false;
                    }
                }else
                {
                     return false;
                }
            });

        });

    </script>





