<style type="text/css">#preLoadersMob {  border-radius: 12px;  left: 40%;  position: absolute;  top: 40%;  z-index: 1;  }</style>




{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            {{ form_jquery_validation(form) }}


            $('form[name="mobile"]').on('submit', function (event) {
                if($( "#mobile_mobile" ).hasClass( "valid" )) {
                    if($( "#mobile_comment_mobile" ).hasClass( "valid" )) {
                        event.preventDefault();
                        $.ajax({
                            type: $(this).attr('method'),
                            url: "{{ path('front_account_mobile', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}",
                            data: new FormData(this),
                            processData: false,
                            contentType: false,
                            beforeSend: function() {
                                $('#preLoadersMob').html('<div id="loader"></div>');
                            },
                            complete: function(){

                            },
                            success: function (response) {
                                //$('#preLoaders').html('');
                                $('#contents-7').html(response);
                            }
                        })
                    }
                    else
                    {
                        return false;
                    }
                }
                else
                {
                    return false;
                }
            });
    });
</script>
{% endblock %}

