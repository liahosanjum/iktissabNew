{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div>
                    {{ 'Update your mobile'|trans}}
                </div>
                <div>
                    {{ message }}
                </div>
                {{ form_start(form) }}
                    {{ form_row(form.iqamaid_mobile) }}
                {{ form_row(form.ext) }}
                    {{ form_row(form.mobile) }}
                    {{ form_row(form.comment_mobile) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>




{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('default/jquery-validation-1.15.0/dist/jquery.validate.js') }}"></script>
    <script type="text/javascript" src="{{ asset("bundles/boekkooijqueryvalidation/additional-methods.js") }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            {{ form_jquery_validation(form) }}
        });
    </script>

{% endblock %}

