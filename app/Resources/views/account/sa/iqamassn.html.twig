{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div>
                        {{ 'Update your Iqama Id/ SSN'|trans}}
                    </div>
                    <div>

                    </div>
                    <div>
                    </div>
                    <!--<a href="{{ url('account_logout', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}">Logout</a>-->
                    <form id="iqamassn-form" name="iqamassn-form" action="iqamassn" method="post" >
                        <div class="error">
                            {{ message }}
                        </div>
                        <div class="form-group">
                            <label >{{ 'Registered Iqama ID/SSN'|trans }}<span class="mandatory">*</span></label>
                            <input class="form-control"   value="{{ iktData.ID_no }}" name="iqamassn_registered" readonly="readonly" maxlength="10" autocomplete="off"  id="iqamassn_registered" placeholder="{{ 'Registered SSN/Iqama'|trans }}" type="text">
                        </div>

                        <div class="form-group">
                            <label >{{ 'New Iqama ID/SSN'|trans }}<span class="mandatory">*</span></label>
                            <input class="form-control"  maxlength="10" value="{% if posted %}{{ posted.iqamassn_new }}{% endif %}" autocomplete="off"  name="iqamassn_new"  id="iqamassn_new" placeholder="{{ 'New Iqama ID/SSN'|trans }}" type="text">
                        </div>
                        <div class="form-group">
                            <label >{{ 'Confirm New Iqama ID/SSN'|trans }}<span class="mandatory">*</span></label>
                            <input class="form-control"  maxlength ="10" value="{% if posted %}{{ posted.confirm_iqamassn_new }}{% endif %}" autocomplete="off"  name="confirm_iqamassn_new"  id="confirm_iqamassn_new" placeholder="{{ 'Confirm New Iqama ID/SSN'|trans }}" type="text">
                        </div>
                        <div class="form-group">
                            <label >{{ 'Comments'|trans }}<span class="mandatory">*</span></label>
                            <textarea class="form-control"   name="comment_iqamassn" autocomplete="off" id="comment_iqamassn">{% if posted %}{{ posted.comment_iqamassn }}{% endif %}</textarea>
                            <input type="text" name="_csrf_token_iqama" value="{{ csrf_token('auth_iqamassn') }}">
                        </div>
                        <input type="submit" value="{{ 'Update'|trans }}" id="iqamassn-submit" name="iqamassn-submit" class="btn btn-primary" />
                    </form>
                </div>
            </div>
    </div>




{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
    <script src="{{ asset('js/lib/formvalidation_iqamassn_'~ app.request.getLocale() ~'.js' )}}"></script>

{% endblock %}

