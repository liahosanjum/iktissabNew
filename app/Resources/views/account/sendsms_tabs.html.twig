{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">



                    <!--<a href="{{ url('account_logout', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}">Logout</a>-->
                    <form id="sms-form" name="sms-form" action="smsverification" method="post">
                        <div class="error">
                            {{ message }}
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="smsverify"  id="smsverify" placeholder="{{ 'Please enter the sms code'|trans }}"  >
                        </div>
                        <input type="submit" id="sms-submit" name="sms-submit" class="btn btn-primary" name="submit" id="submit">
                    </form>

                </div>
            </div>
    </div>




{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.0/additional-methods.min.js"></script>
    <script src="{{ asset('js/lib/formvalidationsms_'~ app.request.getLocale() ~'.js' )}}"></script>
{% endblock %}

