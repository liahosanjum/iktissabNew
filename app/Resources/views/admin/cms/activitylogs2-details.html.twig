{% extends '::baseadmin.html.twig' %}
{% block body %}
    <div class="row">


        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>{{ 'Users Activity Logs' }}</h2>
                    <div class="clearfix"></div>
                </div>


                <div class="x_content" style="width: 500px;">
                    <fieldset title="search users">

                    </fieldset>


                    <!--start of panel body -->
                    <table class="" border="1px" width="600">
                        <thead>
                        <tr>


                            <th   width="200">{{ 'Data' }}</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for key,value in logs %}
                            <tr>
                                <td   width="200">
                                    {{ key }}
                                </td>
                                <td   width="200">
                                    {{ value }}
                                </td>
                            </tr>
                        {% endfor %}

                        {% for key,value in logs_session %}
                            <tr>
                                <td   width="200">
                                    {{ key }}
                                </td>
                                <td   width="200">

                                    {{ value }}
                                </td>
                            </tr>
                        {% endfor %}

                        {% for key,value in logs_other %}
                            <tr>
                                <td   width="200">
                                    {{ key }}
                                </td>
                                <td   width="200">

                                    {{ value }}
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>

                </div>
                <!--end of  of panel body -->
            </div>
        </div>
    </div>

    <script>
        $(function () {
            // for showing iktissab details
            $(".viewDet").click(function (e) {
                var data = $(this).data('text');
//                alert(data);
                $('<div>').dialog({
                    modal: true,
                    open: function ()
                    {
                        $(this).html(data)
                    },
                    height: 400,
                    width: 400,
                    title: 'Action Log Details'
                })
            });

        });
    </script>
<style>
    td , th {  padding: 5px;  }
    .pagination ul li {  float: left;  width: 50px;}
    .pagination ul li.prev { width: 100px; list-style: none; }
    .pagination ul li.next { width: 100px; list-style: none; }
    .pagination ul li.active { color: green; }
</style>




{% endblock %}