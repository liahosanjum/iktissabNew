{% extends 'baseadmin.html.twig' %}


{% block body %}
    <div class="row">


        <div class="col-lg-12  col-md-12 col-sm-12 ">

            {%  if message != "" %}
                <div class="cmsForm {{ error_cl }} ">
                    {{ message }}
                </div>
            {% endif %}


            {{ form_start(form, { 'attr': {'autocomplete': 'off'} }) }}



            <div class="cmsForm">
                {{ form_label(form.page_title) }}
                {{ form_errors(form.page_title) }}
                {{ form_widget(form.page_title) }}
            </div>

            <div class="cmsForm">
                {{ form_label(form.url_path) }}
                {{ form_errors(form.url_path) }}
                {{ form_widget(form.url_path) }}
            </div>
            <div class="cmsForm">
                {{ form_label(form.page_content) }}
                {{ form_errors(form.page_content) }}
                {{ form_widget(form.page_content) }}
            </div>

            <div class="cmsForm">
                {{ form_label(form.country) }}
                {{ form_errors(form.country) }}
                {{ form_widget(form.country) }}
            </div>

            <div class="cmsForm">
                {{ form_label(form.language) }}
                {{ form_errors(form.language) }}
                {{ form_widget(form.language) }}
            </div>
            <div class="cmsForm" id="cms_type" >
                {{ form_label(form.type) }}
                {{ form_errors(form.type) }}
                {{ form_widget(form.type) }}
            </div>

            <div class="cmsForm">
                {{ form_label(form.status) }}

                {{ form_widget(form.status) }}
            </div>

            <div class="cmsFormBrochure">
                {{ form_label(form.brochure) }}
                {{ form_errors(form.brochure) }}
                {{ form_widget(form.brochure) }}
            </div>


            <div class="cmsFormSaveBtn">
                {{ form_label(form.save) }}

                {{ form_widget(form.save) }}
            </div>
            <div class="claerfix"></div>
            {{ form_widget(form.token, {'attr': {'value':  token  }}) }}

            {{ form_end(form) }}
        </div>
    </div>
    <style type="text/css">
        .cmsFormBrochure {
            display: none; }
        #cms_type{ display: none; }
    </style>

{% endblock %}
{% block javascripts2 %}

    <script type="text/javascript">
        $(document).ready(function () {
            {{ form_jquery_validation(form) }}
        });
    </script>

{% endblock %}
