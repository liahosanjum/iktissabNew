        .mediam_opt_reg{float: left;}
        .email_code_reg{float: left; padding-right: 20px;}
        .sms_code_reg{float: left;}
        .user_enbdnb{ float: left; padding-top: 20px; width: 100%;}
        .prev_user_enbdnb{ float: left; width: 100%; }


    </style>


{% endblock %}