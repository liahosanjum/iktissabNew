{% extends "/email-templates/email-base-customers.email.twig" %}
{% block emailbody %}
    <table align="center" class="bgItem" border="0" cellpadding="0" cellspacing="0" valign="top" width="100%"
           style="background: #ffffff;">
        <tbody>
        <tr>
            <td align="right" valign="top">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td align="right" valign="top">
                &nbsp;
            </td>
        </tr>
        <tr>
            <td align="right" valign="top">
                <div class="contentEditableContainer contentTextEditable">
                    <div class="contentEditable">
                        <p style="color: #555555;font-size: 20px;line-height: 30px;margin: 0;">
                            {{ 'Your request has been submitted'|trans }}
                        </p>
                        <div style="color: #555555;font-size: 20px;line-height: 30px;margin: 0;">
                            {{ 'FAQs'|trans}}
                        </div>
