{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div>
                {{ 'Reset Password'|trans}}
            </div>
            <div>

            </div>

            <div class="">
                {{ message }}
                {{ data.show_form }}
            </div>
        {% if (data.show_form == 1 ) %}
            <div>

                {{ form(form) }}

                {{ form_row(form.email) }}

                {{ form_row(form.password) }}

                {{ form_end(form) }}

            </div>
        {% endif %}

        </div>
    </div>

    {% endblock %}
    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
        <script type="text/javascript" src="{{ asset('default/jquery-validation-1.15.0/dist/jquery.validate.js') }}"></script>
        <script type="text/javascript" src="{{ asset("default/js/jquery.validate.defaults.js") }}"></script>
        <script type="text/javascript" src="{{ asset("bundles/boekkooijqueryvalidation/additional-methods.js") }}"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                {{ form_jquery_validation(form) }}
            });
        </script>


</div>
{% endblock %}