{% extends 'base.html.twig' %}

{% block body %}

    <section class="container ">
        {% if app.request.cookies.get('c_locale') == "en" %}
            {%  set side = 'right'  %}
        {% elseif app.request.cookies.get('c_locale') == "ar"  %}
            {%  set side = 'left'  %}
        {% else %}
            {%  set side = 'left'  %}
        {% endif %}
        <div class="breadcrum-wrapper">
            <div class="row">
                <div class="breadcrumb">
                    <a  class="in-active-link" href="{{ path('homepage', {'_country': app.request.get('_country'), '_locale':app.request.get('_locale') }) }}">{{ 'Home'|trans }}</a>

                    <span class="breadcrumb-separator"><i class="fa fa-angle-{{ side }}" aria-hidden="true"></i></span>
                    <a href="#" class="last-breadcrumb">{{ 'Reset Password'|trans}}</a>
                </div>
            </div>
        </div>
        </section>
    <section class="container reset_password_wrapper">
        <div class="row">
            <div class="login-list-title-wrapper col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                <div><h1> {{ 'Reset Password'|trans}}</h1></div>
            </div>
        </div>
        <div class="row  offset-layout">
                <div class="login-passreset  col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    {% if message != "" %}
                        <div class="alert-success-forms formMessage alert {{ errorcl }} fade in alert-dismissable "> {{ message}}</div>
                    {% endif %}
                </div>
        </div>

            <div class="row offset-layout">

                <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12 ">
                    {% if (data.show_form == 1 ) %}
                                        {{ form(reset_password_form) }}

                        <div class="row">
                                        <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12   ">
                                            {{ form_row(reset_password_form.password) }}
                                        </div>
                                        <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12   ">
                                            {{ form_end(reset_password_form) }}
                                        </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>


    {% endblock %}
    {% block javascripts %}

        <script type="text/javascript" src="{{ asset('js/jquery.validate.js') }}"></script>
        <script type="text/javascript" src="{{ asset("bundles/boekkooijqueryvalidation/additional-methods.js") }}"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                {{ form_jquery_validation(reset_password_form) }}
            });
        </script>



{% endblock %}